<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <!-- <link rel="stylesheet" href="/stylesheets/style.css"> -->
    <title>Document</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10  text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-lg px-5 py-2 bg-zinc-700" type="text" placeholder="Title" name="title">
                <textarea class="block w-full rounded-lg mt-2 px-3 py-2 bg-zinc-700 resize-none" placeholder="write your task detail" name="details" id=""></textarea>
                <input class="mt-2 rounded-lg w-full bg-rose-600 px-3 py-2" type="submit" value="Create Task">
            </form>
        </div>
        <div class="taks grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 p-10">
    <% if (files.length > 0) { %>
        <% files.forEach(function(val){ %>
            <div class="bg-zinc-700 px-3 py-4 rounded-lg shadow-md">
                <h1 class="text-white text-xl font-semibold break-words truncate">
                    <%= val %>
                </h1>
                <div class="flex w-full justify-between">
                <a class="text-rose-400 block mt-2 hover:underline" href="/files/<%= val %>">
                    Read More...
                </a>
                <a class="text-rose-400 block mt-2 hover:underline" href="/edit/<%= val %>">Edit</a>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <h3 class="text-zinc-300">No Task Shown Yet...</h3>
    <% } %>
</div>

    </div>
    
</body>
</html>